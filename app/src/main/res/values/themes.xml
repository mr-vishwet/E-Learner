<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->


    <style name="Base.Theme.Adhyapak" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Adhyapak" parent="Base.Theme.Adhyapak" />

    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="viewParent.headerText">

        <!--@dimen/headerTextSize = 25sdp -->
        <item name="android:textColor">@color/contentTextColor</item>
        <item name="android:textSize">@dimen/_25sdp</item>
        <item name="fontFamily">@font/nunito_sans_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="viewParent.headerText.NoMode">
        <item name="android:textColor">@color/darkTextColor</item>
        <item name="fontFamily">@font/nunito_sans</item>
    </style>

    <style name="parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="fontFamily">@font/nunito_sans</item>
        <item name="minHeight">@dimen/_25sdp</item>
        <item name="maxHeight">@dimen/_35sdp</item>
    </style>

    <style name="parent_bold">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="fontFamily">@font/nunito_sans_bold</item>
        <item name="minHeight">@dimen/_25sdp</item>
        <item name="maxHeight">@dimen/_35sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="modifiedEditText" parent="parent">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:backgroundTint">@color/primaryTextColor</item>
        <item name="fontFamily">@font/nunito_sans</item>
    </style>

    <style name="loginButton" parent="viewParent">
        <item name="android:background">@drawable/button_background_blue</item>
        <item name="android:textColor">@color/whiteTextColor</item>
        <item name="fontFamily">@font/nunito_sans_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="spinnerHintText" parent="parent">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="fontFamily">@font/nunito_sans</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="Theme.Adhyapak.Fullscreen" parent="Theme.Adhyapak">
        <item name="android:actionBarStyle">@style/Widget.Theme.Adhyapak.ActionBar.Fullscreen</item>
        <item name="fontFamily">@font/nunito_sans</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.Adhyapak.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fontFamily">@font/nunito_sans</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>


</resources>

